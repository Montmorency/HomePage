@article{anastassakis71,
title = "Morphic effects I-effects of external forces on photon-optical phonon interactions",
journal = "Journal of Physics and Chemistry of Solids",
volume = "32",
number = "2",
pages = "313 - 326",
year = "1971",
issn = "0022-3697",
doi = "https://doi.org/10.1016/0022-3697(71)90016-3",
url = "http://www.sciencedirect.com/science/article/pii/0022369771900163",
author = "E. Anastassakis and E. Burstein",
abstract = "In the presence of an applied external force the symmetry of the vibrational modes of a crystal changes in a way which depends on the nature of the force. The resulting ‘morphic effects’ on the absorption and scattering of electromagnetic radiation may allow one to observe an otherwise inactive mode, and thereby reveal information about its character. We present here a general method for describing the dynamical behavior of any vibrational mode in any non-magnetic crystal structure in the presence of an electric field or stress. The simple group-theoretical approach that we follow enables us also to examine the symmetry properties of the coefficients which determine the strength and the polarization selection rules of these morphic effects."
}

@article{casalot71,
